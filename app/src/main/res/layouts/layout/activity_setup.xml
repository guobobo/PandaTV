<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#0f0f0f0f"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:orientation="horizontal"
        android:background="@color/colorBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_backImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_back_img"
                android:layout_marginLeft="@dimen/x30"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="设置"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常用功能"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y40"/>

    <LinearLayout
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y360"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/relative_msg"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlank"
                android:gravity="center_vertical"
                android:text="是否接受消息推送"
                android:layout_marginLeft="@dimen/x30"/>

            <CheckBox
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_checkMsg"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/check_msg"
                android:button="@null"
                android:layout_marginRight="@dimen/x50"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:background="#0f0f0f0f"/>

        <RelativeLayout
            android:id="@+id/relative_next"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlank"
                android:gravity="center_vertical"
                android:text="自动播放下一集"
                android:layout_marginLeft="@dimen/x30"/>

            <CheckBox
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_checkNext"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/check_msg"
                android:button="@null"
                android:layout_marginRight="@dimen/x50"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:background="#0f0f0f0f"/>
        <RelativeLayout
            android:id="@+id/relative_delete"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlank"
                android:gravity="center_vertical"
                android:text="清除缓存"
                android:layout_marginLeft="@dimen/x30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.54M"
                android:layout_marginTop="@dimen/y50"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x150"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginRight="@dimen/x50"
                android:src="@drawable/personal_delete_img"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y40"/>

    <LinearLayout
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y400"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/relative_feedback"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlank"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:text="用户反馈及帮助"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/personal_enter_img"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:background="#0f0f0f0f"/>
        <RelativeLayout
            android:id="@+id/relative_upgrade"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlank"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:text="检测升级"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/personal_enter_img"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:background="#0f0f0f0f"/>
        <RelativeLayout
            android:id="@+id/relative_like"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlank"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:text="喜欢我们，给我好评"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/personal_enter_img"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:background="#0f0f0f0f"/>
        <RelativeLayout
            android:id="@+id/relative_about"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlank"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:text="关于熊猫频道"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
