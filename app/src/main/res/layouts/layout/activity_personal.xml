<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:orientation="horizontal"
        android:background="@color/colorBlue">


        <ImageView
            android:id="@+id/personal_backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_back_img"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:layout_marginLeft="@dimen/x215"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y520"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/liner_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y110"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/personal_avatarImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/personal_login_head"
                    android:layout_marginTop="@dimen/y10"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击登录"
                    android:textColor="@color/colorBlank"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/liner_login_success"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y110"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/personal_avatarImage_success"
                    android:layout_width="@dimen/x140"
                    android:layout_height="wrap_content"
                    android:src="@drawable/com_facebook_profile_picture_blank_square"
                    android:layout_marginTop="@dimen/y10"/>

                <TextView
                    android:id="@+id/personal_avatarusername_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:textColor="@color/colorBlank"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/y10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y15"
            android:background="@drawable/transverse_gray_line"/>

        <LinearLayout
            android:id="@+id/liner_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:src="@drawable/personal_history_img"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观看记录"
                android:textColor="@color/colorBlank"

                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x75"/>


        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/y10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y15"
            android:background="@drawable/transverse_gray_line"/>
        <LinearLayout
            android:id="@+id/liner_collection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:src="@drawable/personal_shoucang_img"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textColor="@color/colorBlank"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x75"/>


        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/y10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y15"
            android:background="@drawable/transverse_gray_line"/>
        <LinearLayout
            android:id="@+id/linear_set"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:src="@drawable/personal_set_img"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/colorBlank"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x75"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
