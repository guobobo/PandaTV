<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="112.0dp"
        android:layout_height="43.0dp"
        >
        <TextView
            android:id="@+id/item_tab_title"
            android:layout_width="112.0dp"
            android:layout_height="43.0dp"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlank"
            android:textSize="15.0sp"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:text="aaaaaa"
            />
        <!-- android:layout_margin="5dip" -->

        <ImageView
            android:id="@+id/icon_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel_new"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/live_china_txt_edig_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_little_blue_corner"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/live_china_delect_channel"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>