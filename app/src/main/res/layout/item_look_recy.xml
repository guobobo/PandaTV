<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/look_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="央视网友"
            android:textColor="@color/colorBlank"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/look_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/colorLightGray"
            android:gravity="center"
            android:text="1700楼"
            android:textColor="@color/colorBlank"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/look_message"
            android:layout_width="@dimen/x530"
            android:layout_height="wrap_content"
            android:layout_below="@id/look_author"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_weight="1"
            android:text="message"
            android:textColor="@color/colorBlank"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/look_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/look_total"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="07-22-2017"
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>