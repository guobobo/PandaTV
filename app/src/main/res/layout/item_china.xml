<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_china_image"
            android:layout_width="@dimen/x720"
            android:layout_height="@dimen/y500"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:text="[正在直播]"
            android:textColor="@color/colorBlank"
            android:textSize="12sp"
            android:gravity="bottom"
            android:paddingLeft="@dimen/x30"
            />
        <TextView
            android:id="@+id/item_china_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:text=""
            android:textColor="@color/colorBlank"
            android:textSize="12sp"
            android:gravity="bottom"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="10sp"
            android:layout_gravity="center"
            />
        <CheckBox
            android:id="@+id/item_china_checkbox"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/y60"
            android:button="@null"
            android:background="@drawable/liveon_image"
            android:checked="false"
            android:layout_marginLeft="@dimen/x260"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_china_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/item_china_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/colorBlank"
            android:paddingTop="@dimen/x30"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingBottom="@dimen/x20"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"
            />
    </LinearLayout>

</LinearLayout>