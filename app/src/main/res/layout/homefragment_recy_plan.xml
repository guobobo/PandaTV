<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:background="@drawable/transverse_gray_line"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/china_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特别策划"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="@color/colorBlue"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y15"
        android:background="@drawable/transverse_gray_line" />

    <ImageView

        android:layout_marginTop="@dimen/y10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plan_image"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:src="@drawable/_no_collect"/>


    <TextView
        android:id="@+id/plan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二十四节气--芒种"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:textColor="@color/colorBlank"/>
</LinearLayout>