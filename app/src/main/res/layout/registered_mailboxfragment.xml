<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#0f0f0f0f"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="邮箱注册需要激活后才能登录"
        android:textColor="@color/colorPrimary"
        />
    <EditText
        android:id="@+id/et_email"
        android:layout_width="@dimen/y670"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/btn_round"
        android:hint="邮箱"/>

    <TextView
        android:id="@+id/hint_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_emailpsw"
        android:layout_width="@dimen/y670"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:hint="输入密码"
        android:background="@drawable/btn_round"
        android:password="true"/>

    <TextView
        android:id="@+id/hint_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_emailquerenpsw"
        android:layout_width="@dimen/y670"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/btn_round"
        android:hint="确认密码"
        android:password="true"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/et_emailpictureyanzheng"
            android:layout_width="@dimen/y400"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/x35"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:hint="请输入图片验证码"
            android:background="@drawable/btn_round"/>

        <ImageView
            android:id="@+id/email_image"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hint_yanzhengma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y96"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y50">
        <CheckBox
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mailboxfragment_check"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/check_registered"
            android:button="@null"
            android:layout_marginRight="@dimen/x50"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_marginTop="@dimen/y30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:text="我已同意并阅读《央视网网络服务使用协议》"/>

    </LinearLayout>

    <Button
        android:id="@+id/mailboxfragment_btn_registered"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y96"
        android:layout_marginTop="@dimen/y50"
        android:paddingLeft="@dimen/x15"
        android:background="@drawable/btn_bule_round"
        android:textColor="@color/colorWhite"
        android:text="注册" />

</LinearLayout>